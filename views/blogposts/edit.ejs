<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= blogpost.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/blogposts/<%= blogpost._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="blogpost[name]" value="<%= blogpost.name %>" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blogpost[image]" value="<%= blogpost.image %>" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blogpost[description]"
                        value="<%= blogpost.description %>" />
                </div>
                <div class="form-group">
                    <button class="btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/blogposts">Go Back to Blogposts</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>